{
    "name": "madpeterz/yapfinputfilter",
    "description": "YAPF - The input filter",
    "type": "library",
    "license": "GPL-3.0-only",
    "autoload": {
        "psr-4": {
            "YAPF\\Core\\ErrorControl\\": "src/Core/ErrorControl",
            "YAPF\\InputFilter\\": "src/InputFilter"
        }
    },
    "support": {
        "source": "https://github.com/Madpeterz/YAPFInputFilter",
        "issues": "https://github.com/Madpeterz/YAPFInputFilter/issues"
    },
    "config": {
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=8.1",
        "madpeterz/yapfcore": "^2.0"
    },
    "require-dev": {
        "slevomat/coding-standard": "^6.4",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "*"
    },
    "authors": [
        {
            "name": "Madpeter",
            "email": "madpeter@gmail.com"
        }
    ],
    "scripts": {
        "dev-test": [
            "phpunit --colors=always --configuration phpunit.xml --testdox --testsuite All "
        ],
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "phpunit": "phpunit"
    }
}
